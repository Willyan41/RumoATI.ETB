<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/vendors/css/layouts/side-menu.css" rel="stylesheet" />
    <link href="~/vendors/css/layouts/side-menu-old-ie.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/grids-responsive-old-ie-min.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/grids-responsive-min.css">
    <!--<![endif]-->
    <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/pure-min.css" integrity="sha384-oAOxQR6DkCoMliIh8yFnu25d7Eq/PHS21PClpwjOTeU2jRSq11vu66rf90/cZr47" crossorigin="anonymous">
</head>
<body>
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
    </a>

    <div id="menu">
        <div class="pure-menu">
            <a class="pure-menu-heading" href="#">Rumo a TI</a>

            <ul class="pure-menu-list">
                <li class="pure-menu-item"><a href="@Url.Action("Index", "Home")" class="pure-menu-link">Home</a></li>
                <li class="pure-menu-item"><a href="@Url.Action("Index", "Professor")" class="pure-menu-link">Professor</a></li>
                <li class="pure-menu-item"><a href="@Url.Action("Index", "Curso")" class="pure-menu-link">Curso</a></li>
            </ul>
        </div>
    </div>

    <div id="main">

        <div class="header">
            <h1></h1>
            <h2>Bem vindo a nossa escola</h2>
        </div>

        <div class="content">
            @RenderBody()
        </div>

        @RenderSection("footer", required: false)

    </div>

    <script src="~/vendors/js/ui.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/vendors/jquery.unobtrusive-ajax.js"></script>
</body>
</html>