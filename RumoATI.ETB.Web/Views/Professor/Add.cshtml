@model RumoATI.ETB.Web.Models.ProfessorViewModel

<form asp-controller="Professor" asp-action="Add" method="post">
    <div>
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" required />
        <span asp-validation-for="Nome"></span>
    </div>

    <div>
        <label asp-for="SobreNome">Último Nome</label>
        <input asp-for="SobreNome" required />
        <span asp-validation-for="SobreNome"></span>
    </div>

    <div>
        <label asp-for="Email">Email</label>
        <input type="email" asp-for="Email" required />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <input type="submit" value="Salvar" />
    </div>

</form>