@model RumoATI.ETB.Web.Models.ProfessorViewModel

@{
    ViewData["Title"] = "Professor";
}

<h2>Área do Professor</h2>

<div id="add-professor">
    <form asp-controller="Professor" asp-action="Add" method="post">
        <div>
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" required />
            <span asp-validation-for="Nome"></span>
        </div>

        <div>
            <label asp-for="SobreNome">Último Nome</label>
            <input asp-for="SobreNome" required />
            <span asp-validation-for="SobreNome"></span>
        </div>

        <div>
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" required />
            <span asp-validation-for="Email"></span>
        </div>

        <div>
            <input type="submit" value="Salvar" />
        </div>

    </form>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>SobreNome</th>
                <th>Email</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Professores.Any())
            {
                foreach (var p in Model.Professores)
                {
                    <tr>
                        <td>@p.Nome</td>
                        <td>@p.SobreNome</td>
                        <td>@p.Email</td>
                        <td>
                            <a data-ajax="true" data-ajax-update="#add-professor" href='@Url.Action("Update", "Professor", new { Id = p.Id })'>[update]</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>